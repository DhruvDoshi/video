{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "typeRoots": ["@types", "node_modules/@types"],
    "target": "es5",
    "lib": ["esnext"],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "incremental": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
